    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug mocha",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeVersion": "19.4.0",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "runtimeVersion": "19.4.0",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${fileDirname}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "args":["--source=themagician_composite"]
        }
    ]
}