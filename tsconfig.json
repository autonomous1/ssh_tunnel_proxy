{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "declaration": true,
        "lib": [
            "es2018",
            "esnext"
        ],
        "outDir": "dist",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}